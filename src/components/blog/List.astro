---
/**
 * ブログリストコンポーネント
 *
 * レイアウト:
 * - 記事のリスト表示
 * - レスポンシブデザイン対応
 * - 一貫性のある間隔
 *
 * 用途:
 * - 記事一覧の表示
 * - リスト形式のレイアウト
 * - コンテンツの整理
 * - 記事への誘導
 */
import Item from '~/components/blog/ListItem.astro';
import type { Post } from '~/types';

export interface Props {
  posts: Array<Post>;
}

const { posts } = Astro.props;
---

<ul>
  {
    posts.map((post) => (
      <li class="mb-12 md:mb-20">
        <Item post={post} />
      </li>
    ))
  }
</ul>
