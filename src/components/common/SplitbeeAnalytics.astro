---
/**
 * Splitbee分析コンポーネント
 *
 * レイアウト:
 * - Splitbeeスクリプトの読み込み
 * - トラッキングコードの設定
 * - パフォーマンス最適化
 *
 * 用途:
 * - Splitbeeによる訪問者分析
 * - ユーザー行動の追跡
 * - パフォーマンス計測
 * - データ収集
 */
const { doNotTrack = true, noCookieMode = false, url = 'https://cdn.splitbee.io/sb.js' } = Astro.props;
---

<!-- Splitbee Analytics -->
<script is:inline data-respect-dnt={doNotTrack} data-no-cookie={noCookieMode} async src={url}></script>
